{
  "manifest_version": 3,
  "name": "ML Mon Ami",
  "version": "1.0",
  "description": "MarkLogic monitoring friend",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/jquery.min.js",
        "scripts/content.js"
      ],
      "css": [
        "style.css"
      ],
      "matches": [
        "https://*/history/*",
        "http://*/history/*"
      ]
    }
  ],
  "permissions": [
    "unlimitedStorage"
  ]
}