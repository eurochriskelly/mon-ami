{
  "manifest_version": 3,
  "name": "ML Mon Ami",
  "version": "1.0",
  "description": "MarkLogic monitoring friend",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/qconsole/codeMirrorManipulation.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/jquery.min.js",
        "scripts/common.js",
        "scripts/dashboard/content.js"
      ],
      "css": [
        "styles/main.css",
        "styles/dashboard.css"
      ],
      "matches": [
        "https://*/history/*",
        "http://*/history/*"
      ]
    },
    {
      "js": [
        "scripts/jquery.min.js",
        "scripts/common.js",
        "scripts/qconsole/registry.js",
        "scripts/qconsole/qc-control.js",
        "scripts/qconsole/configure.js",
        "scripts/qconsole/content.js"
      ],
      "css": [
        "styles/main.css",
        "styles/qconsole.css"
      ],
      "matches": [
        "https://*/qconsole/*",
        "http://*/qconsole/*"
      ]
    }
  ],
  "permissions": [
    "unlimitedStorage"
  ]
}